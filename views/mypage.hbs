<div class="mypageForm">
    <div class="card">
        <div class="modal-title">
            MY PAGE
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="name" >Nickname</label>
                <input disabled type="text" class="form-input" id="name" name="name" value="{{session.user.name}}">
            </div>
            <div class="form-group">
                <label for="email" >Email</label>
                <input disabled type="text" class="form-input" id="email" name="email" value="{{session.user.email}}">
            </div>
        </div>
        <br>
        <div class="card-footer">
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/update_info'">Update my info</button>
        </div>
    </div>
</div>